  const [selectedTypes, setSelectedTypes] = useState([]);
  const [hoveredType, setHoveredType] = useState(null);
  const [ratings, setRatings] = useState({});
  const [showAnalysis, setShowAnalysis] = useState(false);

  const personalityTypes = [
    {
      id: 1,
      name: "ì‚°ë§Œì™•",
